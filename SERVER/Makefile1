CXX = g++
CXXFLAGS = -g -Wall -std=c++14 -DTEMPLATE_HEADERS_INCLUDE_SOURCE
LDFLAGS = -lpthread -lrt
SOURCES = main.cpp server/epoll.cpp server/server.cpp server/socket.cpp pool/tpool.cpp Http/Http.cpp
OBJECTS = $(SOURCES:.cpp=.o)
TARGET = Webserver

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS)  -o $@ $(OBJECTS) $(LDFLAGS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

.PHONY: clean
clean:
	rm -f $(OBJECTS) $(TARGET)